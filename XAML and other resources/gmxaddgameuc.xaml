<liiil1:dje_zD9H5YRWWZ4CW8CBTSV5XFZWZGYMAUUF2CG8QX76AKAKJ5TWK6FC4D9NNZ7QBGYPWR3_ejd xmlns:liiil1="clr-namespace:-" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:liil1il="http://schemas.microsoft.com/winfx/2006/xaml">
	<Button
		Width="164"
		Height="200"
		Margin="5"
		Cursor="Hand"
		Command="{Binding AddCommand}">
		<FrameworkElement.Style>
			<Style
				BasedOn="{StaticResource InvisibleButton}"
				TargetType="{liil1il:Type Button}">
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{liil1il:Type Button}">
							<Grid>
								<Border
									Background="#FF000000"
									CornerRadius="20"
									Opacity="0.6" />
								<Border
									Name="BackgroundBorder"
									Width="154"
									Height="190"
									CornerRadius="16">
									<Border.Background>
										<ImageBrush
											Stretch="UniformToFill"
											ImageSource="{Binding Icon}" />
									</Border.Background>
									<UIElement.Clip>
										<RectangleGeometry
											RadiusX="16"
											RadiusY="16"
											Rect="0 0 160 190" />
									</UIElement.Clip>
									<UIElement.Effect>
										<BlurEffect
											liil1il:Name="BlurEffect"
											Radius="0" />
									</UIElement.Effect>
								</Border>
								<Border
									Width="154"
									Height="190"
									CornerRadius="14">
									<Border.Background>
										<LinearGradientBrush
											StartPoint="0.5,0"
											EndPoint="0.5,1">
											<GradientStop
												Offset="1"
												Color="#FF05070F" />
											<GradientStop
												Offset="0.868"
												Color="#CC05070F" />
											<GradientStop
												Offset="0.601"
												Color="#00000000" />
										</LinearGradientBrush>
									</Border.Background>
								</Border>
								<StackPanel
									Margin="15"
									HorizontalAlignment="Left"
									VerticalAlignment="Bottom"
									Orientation="Vertical">
									<TextBlock
										VerticalAlignment="Center"
										FontSize="16"
										FontWeight="Medium"
										Foreground="#FFFFFFFF"
										TextAlignment="Left"
										TextTrimming="CharacterEllipsis"
										ToolTipService.BetweenShowDelay="5"
										Text="{Binding Name}" />
									<TextBlock
										HorizontalAlignment="Left"
										VerticalAlignment="Center"
										FontSize="14"
										FontWeight="Regular"
										Foreground="{liil1il:Static liiil1:dje_zG25CMVCNLAXR669QGY4VQH2TVB3HB4JJZQ_ejd.dje_zRGR5QHU2M7DAPA2_ejd}"
										Opacity="0.8"
										TextAlignment="Left"
										TextTrimming="CharacterEllipsis"
										Text="{Binding FoundIn}" />
								</StackPanel>
								<StackPanel
									Name="AddButton"
									Margin="0,0,0,50"
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									Opacity="0">
									<TextBlock
										Name="AddGameTextBlock"
										VerticalAlignment="Center"
										FontSize="16"
										FontWeight="SemiBold"
										Foreground="#FFFFFFFF"
										Text="{DynamicResource AddGame}"
										TextAlignment="Left" />
									<Image
										Width="26"
										Margin="0,5,0,0"
										RenderOptions.BitmapScalingMode="Fant"
										Source="pack://application:,,,/BoosterX;component/Resources/Images/Plus.png" />
								</StackPanel>
							</Grid>
							<ControlTemplate.Triggers>
								<DataTrigger
									Value="True"
									Binding="{Binding IsAdded}">
									<Setter
										TargetName="AddGameTextBlock"
										Value="{StaticResource added}"
										Property="Text" />
									<Setter
										Property="IsEnabled"
										Value="False" />
								</DataTrigger>
								<EventTrigger
									RoutedEvent="MouseEnter">
									<BeginStoryboard>
										<Storyboard>
											<DoubleAnimation
												Storyboard.TargetName="AddButton"
												Storyboard.TargetProperty="Opacity"
												To="1"
												Duration="0:0:0.2" />
											<DoubleAnimation
												Storyboard.TargetName="BackgroundBorder"
												Storyboard.TargetProperty="Opacity"
												To="0.4"
												Duration="0:0:0.2" />
											<DoubleAnimation
												Storyboard.TargetName="BlurEffect"
												Storyboard.TargetProperty="Radius"
												To="10"
												Duration="0:0:0.2" />
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
								<EventTrigger
									RoutedEvent="MouseLeave">
									<BeginStoryboard>
										<Storyboard>
											<DoubleAnimation
												Storyboard.TargetName="AddButton"
												Storyboard.TargetProperty="Opacity"
												To="0"
												Duration="0:0:0.2" />
											<DoubleAnimation
												Storyboard.TargetName="BackgroundBorder"
												Storyboard.TargetProperty="Opacity"
												To="1"
												Duration="0:0:0.2" />
											<DoubleAnimation
												Storyboard.TargetName="BlurEffect"
												Storyboard.TargetProperty="Radius"
												To="0"
												Duration="0:0:0.2" />
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</FrameworkElement.Style>
	</Button>
</liiil1:dje_zD9H5YRWWZ4CW8CBTSV5XFZWZGYMAUUF2CG8QX76AKAKJ5TWK6FC4D9NNZ7QBGYPWR3_ejd>
