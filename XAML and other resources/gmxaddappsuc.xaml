<liiil1:dje_zXDDY734JTRJMYEQY33V7MNQ4JCNC9JLBFQ3AKRJKCNM28LE4RST8H8ZG6FL5VRB7AQ_ejd xmlns:liiil1="clr-namespace:-" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:liil1il="http://schemas.microsoft.com/winfx/2006/xaml">
	<Button
		Height="60"
		Margin="5"
		Cursor="Hand"
		Command="{Binding AddCommand}">
		<FrameworkElement.Style>
			<Style
				BasedOn="{StaticResource InvisibleButton}"
				TargetType="{liil1il:Type Button}">
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{liil1il:Type Button}">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition
										Width="*" />
									<ColumnDefinition
										Width="auto" />
								</Grid.ColumnDefinitions>
								<Border
									Grid.Column="0"
									Grid.ColumnSpan="2"
									Background="#FF000000"
									CornerRadius="20"
									Opacity="0.6" />
								<StackPanel
									Grid.Column="0"
									Margin="5"
									Orientation="Horizontal">
									<Border
										Name="BackgroundBorder"
										Width="50"
										Height="50"
										CornerRadius="16">
										<Border.Background>
											<ImageBrush
												Stretch="UniformToFill"
												ImageSource="{Binding Icon}" />
										</Border.Background>
										<UIElement.Clip>
											<RectangleGeometry
												RadiusX="16"
												RadiusY="16"
												Rect="0 0 50 50" />
										</UIElement.Clip>
									</Border>
									<StackPanel
										Margin="5,0,0,0"
										HorizontalAlignment="Left"
										VerticalAlignment="Center"
										Orientation="Vertical">
										<TextBlock
											VerticalAlignment="Center"
											FontSize="16"
											FontWeight="Medium"
											Foreground="#FFFFFFFF"
											TextAlignment="Left"
											TextTrimming="CharacterEllipsis"
											ToolTipService.BetweenShowDelay="5"
											Text="{Binding Name}" />
										<TextBlock
											HorizontalAlignment="Left"
											VerticalAlignment="Center"
											FontSize="14"
											FontWeight="Regular"
											Foreground="#FF808080"
											Opacity="0.8"
											TextAlignment="Left"
											TextTrimming="CharacterEllipsis"
											Text="{Binding ExeDir}"
											ToolTip="{Binding ExeDir}" />
									</StackPanel>
								</StackPanel>
								<Grid
									Name="AddButton"
									Column="1"
									HorizontalAlignment="Right"
									Opacity="0">
									<StackPanel
										Margin="20,0,20,0"
										HorizontalAlignment="Right"
										VerticalAlignment="Center"
										Orientation="Horizontal">
										<Image
											Width="23"
											Margin="0,0,5,0"
											RenderOptions.BitmapScalingMode="Fant"
											Source="pack://application:,,,/BoosterX;component/Resources/Images/Plus.png" />
										<TextBlock
											Name="AddGameTextBlock"
											VerticalAlignment="Center"
											FontSize="16"
											FontWeight="SemiBold"
											Foreground="#FFFFFFFF"
											Text="{DynamicResource add}"
											TextAlignment="Left" />
									</StackPanel>
								</Grid>
								<TextBlock
									Name="AddedText"
									Grid.Column="1"
									Margin="20,0,20,0"
									HorizontalAlignment="Right"
									VerticalAlignment="Center"
									FontSize="16"
									FontWeight="SemiBold"
									Foreground="{liil1il:Static liiil1:dje_zG25CMVCNLAXR669QGY4VQH2TVB3HB4JJZQ_ejd.dje_z7Y3AEKDZ_ejd}"
									Text=""
									TextAlignment="Left" />
							</Grid>
							<ControlTemplate.Triggers>
								<DataTrigger
									Value="True"
									Binding="{Binding IsAdded}">
									<Setter
										TargetName="AddedText"
										Value="{StaticResource added}"
										Property="Text" />
									<Setter
										Property="IsEnabled"
										Value="False" />
								</DataTrigger>
								<EventTrigger
									RoutedEvent="MouseEnter">
									<BeginStoryboard>
										<Storyboard>
											<DoubleAnimation
												Storyboard.TargetName="AddButton"
												Storyboard.TargetProperty="Opacity"
												To="1"
												Duration="0:0:0.2" />
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
								<EventTrigger
									RoutedEvent="MouseLeave">
									<BeginStoryboard>
										<Storyboard>
											<DoubleAnimation
												Storyboard.TargetName="AddButton"
												Storyboard.TargetProperty="Opacity"
												To="0"
												Duration="0:0:0.2" />
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</FrameworkElement.Style>
	</Button>
</liiil1:dje_zXDDY734JTRJMYEQY33V7MNQ4JCNC9JLBFQ3AKRJKCNM28LE4RST8H8ZG6FL5VRB7AQ_ejd>
